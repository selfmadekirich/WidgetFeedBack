@model WebApplication1.Models.Question

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создание Вопроса</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <p> 
                   <p>
                    Выберете тип вопроса
                  </p>
                <select id="selectID">
                    <option value="Оценка по шкале">Оценка по шкале</option>
                    <option  value="Развернутый ответ">Развернутый ответ</option>
                    <option value="ОтветДаНет">Ответ да нет</option>
                </select>
            </p>
                <input asp-for="Type" type="hidden" id="QType" value="Оценка по шкале" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ques" class="control-label"></label>
                <input asp-for="Ques" class="form-control" />
                <span asp-validation-for="Ques" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextQues1" class="control-label"></label>
                <input asp-for="NextQues1" class="form-control" />
                <span asp-validation-for="NextQues1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextQues2" class="control-label"></label>
                <input asp-for="NextQues2" class="form-control" />
                <span asp-validation-for="NextQues2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowQuestions">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $(document).ready(function () {

        $("#selectID").change(function () {
            var selectedtype = $('#selectID option:selected').val();
            $('#QType').val(selectedtype);

        });
    });
</script>